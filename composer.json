{
    "name": "davidstrada/unit-conversion",
    "description": "unit-conversion",
    "keywords": [
        "davidstrada",
        "unit-conversion"
    ],
    "homepage": "https://github.com/davidstrada/unit-conversion",
    "license": "MIT",
    "authors": [
        {
            "name": "David",
            "email": "idavid@fastmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^9.5",
        "spatie/ray": "^1.10",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Davidstrada\\UnitConversion\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Davidstrada\\UnitConversion\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
